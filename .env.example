# Database
# Use a plain Postgres URL here so tools like `psql "$DATABASE_URL"` work.
# The app will automatically upgrade to SQLAlchemy's `postgresql+psycopg://` internally.
DATABASE_URL=postgresql://user:pass@localhost:5432/nrl_edge

# Execution
DEPLOY_SEASON=2026
DEPLOY_ROUND=1

# Discord
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=Edge Engine

# Model versions
MODEL_VERSION=v2026-02-poisson-v1

# Risk
FRACTIONAL_KELLY=0.33
MAX_STAKE_FRAC=0.03

# Guardrails
ENTROPY_MAX=0.65
EDGE_MIN=0.05
MAX_ROUND_EXPOSURE_FRAC=0.06

# Dry-run controls
# DRY_RUN is a CLI flag (see app/run.py). These envs control behavior.
DRY_NOTIFY=0
